<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="342dp"
        android:layout_height="364dp"
        android:background="@drawable/atp__activity_player_layout_help_call_audience_background"
        android:paddingTop="25dp"
>
    <TableRow
            android:id="@+id/tr_call_friend_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:visibility="visible"
    >
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
        >
            <TextView
                    android:id="@+id/txt_call_friend_nurser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/btn_call_friend_click_1"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Y tá"
                    android:textSize="24dp"
                    android:textColor="@color/color_text"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
        >
            <TextView
                    android:id="@+id/txt_call_friend_student"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/btn_call_friend_click_2"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sinh viên"
                    android:textSize="24dp"
                    android:textColor="@color/color_text"
            />
        </LinearLayout>
    </TableRow>

    <TableRow
            android:id="@+id/tr_call_friend_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
    >
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
        >
            <TextView
                    android:id="@+id/txt_call_friend_engineer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/btn_call_friend_click_3"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kỹ sư"
                    android:textSize="24dp"
                    android:textColor="@color/color_text"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
        >
            <TextView
                    android:id="@+id/txt_call_friend_staff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/btn_call_friend_click_4"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhân viên"
                    android:textSize="24dp"
                    android:textColor="@color/color_text"
            />
        </LinearLayout>
    </TableRow>

    <LinearLayout
            android:id="@+id/ll_affter_call"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone"
    >
        <TextView
                android:id="@+id/txt_call_friend_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/btn_call_friend_click_1"
        />
        <TextView
                android:id="@+id/txt_call_friend_suggest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Câu trả lời hỗ trợ bạn là ..."
                android:textColor="@color/color_text"
                android:textSize="22dp"
                android:layout_marginBottom="24dp"
        />
        <Button
                android:id="@+id/btn_call_friend_thanks"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button_dialog"
                android:text="Cảm ơn bạn"
                android:textColor="@android:color/white"
        />
    </LinearLayout>


</LinearLayout>