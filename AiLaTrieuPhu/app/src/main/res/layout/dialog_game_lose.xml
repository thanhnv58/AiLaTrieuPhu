<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:gravity="center"
>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/color_dialog_toolbar"
            android:gravity="center_vertical"
    >
        <TextView
                android:id="@+id/txt_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DỪNG CUỘC CHƠI"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="24dp"
        />
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:gravity="center"
    >
        <TextView
                android:id="@+id/txt_dialog_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rất tiếc bạn phải dừng cuộc chơi tại đây :("
                android:textSize="16dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:textColor="@android:color/white"
        />
    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
    >
        <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/atp__achievement_yeu_hoa_binh"
        />
        <TextView
                android:id="@+id/txt_game_lose_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn hoàn thành 5 câu hỏi"
                android:textColor="@color/color_text"
                android:textSize="16dp"
        />
    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center"
            android:layout_marginBottom="8dp"
    >
        <Button
                android:id="@+id/btn_play_again"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_dialog"
                android:layout_marginRight="16dp"
                android:text="Play again"
                android:textColor="@android:color/white"
        />

        <Button
                android:id="@+id/btn_quit"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_dialog"
                android:text="Thoát"
                android:textColor="@android:color/white"
        />
    </TableRow>
</LinearLayout>